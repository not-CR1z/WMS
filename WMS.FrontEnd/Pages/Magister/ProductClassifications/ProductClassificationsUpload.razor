@page "/productclassifications/upload"


<h3>Subir Clasificación de Productos</h3>

<div class="card">
    <div class="card-header">
        <span>
            <i class="bi bi-card-heading" /> Clasificación Producto
            <a class="btn btn-sm btn-primary" href="/productclassifications"><i class="bi bi-arrow-left-square"/> Regresar</a>
          @*   <InputFile OnChange="OnChange" accept=".xlsx" /> *@
            <button @onclick=@(() => UploadAsycn()) class="btn btn-sm btn-success">Guardar</button>
        </span>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Fila</th>
                    <th>Nombre</th>
                    <th>Error</th>
                    <th style="width:160px"></th>
                </tr>
            </thead>
            @if(loading)
            {
                <Loading/>
            }
            <GenericList MyList="MyList">
                <Body>
                <tbody>
                        @foreach (var item in MyList!)
                        {
                        <tr>
                            <th>@item.Row</th>
                            <td><InputText class="form-control" @bind-Value="@item.Name" /></td>
                            <td>@item.StrError</td>
                            <td>
                                <button @onclick=@(() => DeleteAsycn(item)) class="btn btn-danger"><i class="bi bi-trash" /></button>
                            </td>
                        </tr>
                        }
                </tbody>
                </Body>
            </GenericList>
        </table>
    </div>
</div>

