@if (loading)
{
    <Loading />
}
else
{
    <NavigationLock OnBeforeInternalNavigation="OnBeforeInternalNavigation" />
    <EditForm Model="Model" OnValidSubmit="OnDataAnnotationsValidatedAsync">
        <DataAnnotationsValidator />
        <div class="col-12">
            <div class="row">
                <div class="card col-12">
                    <div class="card-body col-12">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label>Nombres:</label>
                                    <div>
                                        <InputText class="form-control" @bind-Value="@Model.FirstName" />
                                        <ValidationMessage For="@(() => Model.FirstName)" />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label>Apellidos:</label>
                                    <div>
                                        <InputText class="form-control" @bind-Value="@Model.LastName" />
                                        <ValidationMessage For="@(() => Model.LastName)" />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label>Tipo Documento:</label>
                                    <div>
                                        <select class="form-select" @bind="Model.DocumentTypeUserId">
                                            <option value="0">-- Seleccione Tipo Documento --</option>
                                            @if (DocumentTypeUsersList is not null)
                                            {
                                                @foreach (var city in DocumentTypeUsersList)
                                                {
                                                    <option value="@city.Id">@city.Name</option>
                                                }
                                            }
                                        </select>
                                        <ValidationMessage For="@(() => Model.DocumentTypeUserId)" />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label>Documento:</label>
                                    <div>
                                        <InputText class="form-control" @bind-Value="@Model.Document" />
                                        <ValidationMessage For="@(() => Model.Document)" />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label>Teléfono:</label>
                                    <div>
                                        <InputText class="form-control" @bind-Value="@Model.PhoneNumber" />
                                        <ValidationMessage For="@(() => Model.PhoneNumber)" />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label>Dirección:</label>
                                    <div>
                                        <InputText class="form-control" @bind-Value="@Model.Address" />
                                        <ValidationMessage For="@(() => Model.Address)" />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label>Email:</label>
                                    <div>
                                        <InputText class="form-control" @bind-Value="@Model.Email" />
                                        <ValidationMessage For="@(() => Model.Email)" />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <InputImg Label="Foto" ImageSelected="ImageSelected" ImageURL="@imageUrl" />
                                </div>
                                @if(!IsCreate)
                                {
                                    <div class="mb-3">
                                        <label>Contraseña:</label>
                                        <div>
                                            <InputText type="password" class="form-control" @bind-Value="@Model.Password" />
                                            <ValidationMessage For="@(() => Model.Password)" />
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label>Confirmación de contraseña:</label>
                                        <div>
                                            <InputText type="password" class="form-control" @bind-Value="@Model.PasswordConfirm" />
                                            <ValidationMessage For="@(() => Model.PasswordConfirm)" />
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="mb-3">
                                        <br/>
                                        <div> 
                                            <a class="btn btn-sm btn-primary float-start" href="/users/changepassword"><i class="bi bi-key" /> Cambiar Contraseña</a>
                                        </div>
                                    </div>
                                    <br/>
                                }
                                <div class="mb-3">
                                    <label>Super Usuario:</label>
                                    <div>
                                        <input class="form-check-input" type="checkbox" @bind="@Model.SuperU" />
                                        <ValidationMessage For="@(() => Model.SuperU)" />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label>Roles:</label>
                                    <div>
                                        <MultipleSelector NonSelected="nonSelected" Selected="selected" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <span>
                            <button class="btn btn-sm btn-primary float-end" type="submit"><i class="bi bi-floppy" /> Guardar</button>
                        </span>
                    </div>
                </div>               
            </div>
        </div>
    </EditForm>
}
